<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_lg"
    android:paddingEnd="@dimen/spacing_lg"
    android:paddingTop="@dimen/spacing_md"
    android:paddingBottom="@dimen/spacing_lg"
    android:background="@drawable/bg_bottom_sheet_rounded">

    <!-- Drag Handle -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="48dp"
        android:layout_height="6dp"
        android:background="@drawable/bg_drag_handle"
        android:layout_marginBottom="@dimen/spacing_lg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:lineHeight="28sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/dragHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tech Talk: AI in Business" />

    <!-- Calendar Icon -->
    <ImageView
        android:id="@+id/ivCalendar"
        android:layout_width="12dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_calendar"
        android:layout_marginTop="4dp"
        app:tint="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Date/Time -->
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_body"
        android:lineHeight="20sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="@id/ivCalendar"
        app:layout_constraintBottom_toBottomOf="@id/ivCalendar"
        app:layout_constraintStart_toEndOf="@id/ivCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Jan 26, 2025, 11:00 AM - 12:30 PM" />

    <!-- Location Icon -->
    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_location"
        android:visibility="gone"
        app:tint="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/ivCalendar"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <!-- Location -->
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_body"
        android:lineHeight="20sp"
        android:fontFamily="sans-serif"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ivLocation"
        app:layout_constraintBottom_toBottomOf="@id/ivLocation"
        app:layout_constraintStart_toEndOf="@id/ivLocation"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Virtual Meeting"
        tools:visibility="visible" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/border_light"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/spacing_lg"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View Event Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewEvent"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/view_event"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body"
        android:fontFamily="sans-serif"
        app:backgroundTint="#262626"
        app:cornerRadius="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Close Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/close"
        android:textColor="@color/text_tertiary"
        android:textSize="@dimen/text_size_body"
        android:fontFamily="sans-serif"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="@dimen/spacing_sm"
        app:layout_constraintTop_toBottomOf="@id/btnViewEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
