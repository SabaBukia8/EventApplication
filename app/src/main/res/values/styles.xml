<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Input Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/placeholder_text</item>
        <item name="android:textColorHint">@color/placeholder_text</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/text_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_link</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- OTP Input Style -->
    <style name="OtpBoxStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Checkbox Style -->
    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Label Text Style -->
    <style name="TextAppearance.App.Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/label_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Base Text Appearance -->
    <style name="TextAppearance.App" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Title Text Style -->
    <style name="TextAppearance.App.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="TextAppearance.App.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
